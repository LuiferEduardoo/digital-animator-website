---
import type { CollectionEntry } from 'astro:content';

interface Project <T = string> {
	title: string;
	path: string;
	img: string;
	animation: string;
	img_alt: string;
}

interface Props {
	project: Project<'portfolio'>;
}

const { title, path, img, animation, img_alt } = Astro.props.project;
---

<a class="card" href={`/portafolio/${path}`}>
	<span class="title">{title}</span>
	<img src={img} alt={img_alt || ''} loading="lazy" decoding="async" />
	<img class="animation" src={animation} alt="Animation" />
</a>

<style>
	.card {
		display: grid;
		grid-template: auto 1fr / auto 1fr;
		height: 11rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		font-family: var(--font-brand);
		font-size: var(--text-lg);
		font-weight: 500;
		transition: box-shadow var(--theme-transition), opacity var(--theme-transition);
		position: relative;
	}

	.card:hover {
		box-shadow: var(--shadow-md);
	}

	.animation {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		opacity: 0;
		transition: opacity var(--theme-transition);
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.card:hover .animation {
		opacity: 1;
	}

	.title {
		grid-area: 1 / 1 / 2 / 2;
		z-index: 1;
		margin: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--gray-999);
		color: var(--gray-200);
		border-radius: 0.375rem;
	}

	img {
		grid-area: 1 / 1 / 3 / 3;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	@media (min-width: 50em) {
		.card {
			height: 22rem;
			border-radius: 1.5rem;
		}

		.title {
			border-radius: 0.9375rem;
		}
	}
</style>